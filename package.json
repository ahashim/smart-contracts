{
  "name": "critter",
  "version": "0.0.1",
  "description": "crypto twitter",
  "scripts": {
    "clean": "rm -rf .openzeppelin .package-lock.json .pnpm-lock.yaml artifacts cache coverage* node_modules typechain*",
    "compile": "hardhat compile",
    "console": "NODE_OPTIONS=--experimental-repl-await hardhat run --network localhost scripts/console.ts",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.ts",
    "format": "prettier --write \"{,!(node_modules|.openzeppelin|typechain*)/**/}*.{js,md,sol,ts}\"",
    "lint": "solhint 'contracts/**/*.sol'",
    "node": "hardhat node",
    "size": "hardhat size-contracts",
    "test": "REPORT_GAS=1 TS_NODE_TRANSPILE_ONLY=1 hardhat test",
    "typecheck": "tsc --esModuleInterop --noEmit --resolveJsonModule --skipLibCheck",
    "watch:compile": "TS_NODE_TRANSPILE_ONLY=1 hardhat watch compile",
    "watch:ci": "TS_NODE_TRANSPILE_ONLY=1 hardhat watch ci",
    "prepare": "husky install"
  },
  "keywords": [
    "blockchain",
    "critter",
    "crypto",
    "ethereum",
    "marketplace",
    "microblog"
  ],
  "author": "Ahmed Hashim <ahashim@users.noreply.github.com> (https://ahmedhashim.app/)",
  "license": "Apache-2.0",
  "devDependencies": {
    "@dk1a/solidity-stringutils": "^0.3.2",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "@openzeppelin/hardhat-upgrades": "^1.22.0",
    "@symblox/hardhat-abi-gen": "^0.2.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "abdk-libraries-solidity": "^3.1.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "erc721a-upgradeable": "^4.2.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-sonarjs": "^0.17.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.4",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-watcher": "^2.5.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "1.1.0",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.ts": [
      "eslint --fix"
    ]
  }
}
