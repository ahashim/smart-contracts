{
  "name": "critter",
  "version": "0.0.1",
  "description": "crypto twitter",
  "scripts": {
    "compile": "npx hardhat compile",
    "console": "NODE_OPTIONS=--experimental-repl-await npx hardhat run scripts/console.ts",
    "coverage": "npx hardhat coverage",
    "deploy": "npx hardhat run scripts/deploy.ts",
    "format": "prettier --write 'contracts/**/*.sol'",
    "lint": "solhint 'contracts/**/*.sol'",
    "prepare": "npm run format && npm run lint && npx hardhat prepare",
    "size": "npx hardhat size-contracts",
    "test": "REPORT_GAS=1 npx TS_NODE_TRANSPILE_ONLY=1 hardhat test",
    "watch": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat watch ci"
  },
  "keywords": [
    "blockchain",
    "critter",
    "crypto",
    "ethereum",
    "microblog"
  ],
  "author": "Ahmed Hashim <ahashim@users.noreply.github.com> (https://ahmedhashim.app/)",
  "license": "Apache-2.0",
  "devDependencies": {
    "@ethersproject/abi": "^5.6.1",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/providers": "^5.6.4",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.26",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.4",
    "hardhat": "^2.9.3",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-watcher": "^2.1.1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3"
  }
}
