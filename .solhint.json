{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "compiler-version": [
      "error",
      "^0.8.0"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "prettier/prettier": "warn",
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ],
    "var-name-mixedcase": "off",
    "quotes": [
      "error",
      "single"
    ]
  }
}
