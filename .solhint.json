{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "prettier/prettier": "error",
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ],
    "quotes": ["error", "single"]
  }
}
