    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2020",
    "declaration": true
